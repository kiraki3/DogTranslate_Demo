<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AnalysisResultActivity">
    <data>
        <import type="android.view.View"/>
        <variable
            name="isPlay"
            type="java.lang.Boolean"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/iv_puppy_image"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:contentDescription="@string/logo_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout_audio_play"
            app:srcCompat="@drawable/puppy_logo" />

        <LinearLayout
            android:id="@+id/layout_audio_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_puppy_image"
            app:layout_constraintBottom_toTopOf="@+id/layout_analysis_result">

            <ImageButton
                android:id="@+id/ib_play_start"
                android:layout_width="@dimen/button_size_sm"
                android:layout_height="@dimen/button_size_sm"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/play_start_desc"
                android:src="@drawable/playbutton"
                android:visibility="@{!isPlay ? View.VISIBLE : View.GONE}"
                />

            <ImageButton
                android:id="@+id/ib_play_stop"
                android:layout_width="@dimen/button_size_sm"
                android:layout_height="@dimen/button_size_sm"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/play_stop_desc"
                android:src="@drawable/stopbutton"
                tools:visibility="gone"
                android:visibility="@{isPlay ? View.VISIBLE : View.GONE}"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_analysis_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_audio_play"
            app:layout_constraintBottom_toTopOf="@+id/btn_back_analysis"
            android:orientation="vertical">
            <TextView
                android:id="@+id/label_analysis_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_analysis_result"
                android:textAlignment="center"
                 />
            <TextView
                android:id="@+id/tv_analysis_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size"
                android:textAlignment="center"
                tools:text="와, 당신은 정말 대단해요!"
                android:textStyle="bold"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_back_analysis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            app:layout_constraintTop_toBottomOf="@+id/layout_analysis_result"
            app:layout_constraintBottom_toTopOf="@+id/btn_back_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Button
            android:id="@+id/btn_back_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_back_analysis"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>