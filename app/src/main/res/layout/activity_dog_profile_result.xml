<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DogProfileResultActivity">

    <ImageView
        android:id="@+id/user_imageView_puppy"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/puppy_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/puppy_name_text_view"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="272dp"
        android:gravity="center"
        android:text="업동이"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/dog_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selected_breed"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="328dp"
        android:gravity="center"
        android:text="말티즈"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/dog_breed"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dog_name"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="272dp"
        android:gravity="center"
        android:text="이름"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dog_breed"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="328dp"
        android:gravity="center"
        android:text="종류"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_rewrite_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="프로필 다시 작성하기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selected_breed" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="프로필 작성이 완료됐다면 \n 음성 분석을 하러 가볼까요?"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_rewrite_profile"/>

    <Button
        android:id="@+id/btn_toAnalysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="녹음하러 가기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"/>

</androidx.constraintlayout.widget.ConstraintLayout>