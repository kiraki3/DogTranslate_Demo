<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DogProfileResultActivity">

    <ImageView
        android:id="@+id/user_imageView_puppy"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/puppy_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/puppy_name_text_view"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="272dp"
        android:gravity="center"
        android:text="업동이"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/dog_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selected_breed"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="328dp"
        android:gravity="center"
        android:text="말티즈"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/dog_breed"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dog_name"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="272dp"
        android:gravity="center"
        android:text="이름"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dog_breed"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="328dp"
        android:gravity="center"
        android:text="종류"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




