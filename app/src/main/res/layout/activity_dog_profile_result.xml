<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DogProfileResultActivity">

    <ImageView
        android:id="@+id/iv_puppy_image"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:contentDescription="@string/logo_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_puppy_name"
        app:srcCompat="@drawable/puppy_logo" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_puppy_name"
        android:layout_width="@dimen/image_size"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_puppy_image"
        app:layout_constraintBottom_toTopOf="@+id/layout_puppy_breed"
        app:layout_constraintStart_toStartOf="@+id/iv_puppy_image"
        app:layout_constraintEnd_toEndOf="@+id/iv_puppy_image">
        <TextView
            android:id="@+id/label_puppy_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/puppy_name"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_puppy_name"
        />
        <TextView
            android:id="@+id/tv_puppy_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="업동이"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/label_puppy_name"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_puppy_breed"
        android:layout_width="@dimen/image_size"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layout_puppy_name"
        app:layout_constraintBottom_toTopOf="@+id/btn_rewrite_profile"
        app:layout_constraintStart_toStartOf="@+id/layout_puppy_name"
        app:layout_constraintEnd_toEndOf="@+id/layout_puppy_name">
        <TextView
            android:id="@+id/label_puppy_breed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/puppy_breed"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_puppy_breed"
            />
        <TextView
            android:id="@+id/tv_puppy_breed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="말티즈"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/label_puppy_breed"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_rewrite_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rewrite_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_puppy_breed"
        app:layout_constraintBottom_toTopOf="@+id/tv_result_desc"/>

    <TextView
        android:id="@+id/tv_result_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_rewrite_profile"
        app:layout_constraintBottom_toTopOf="@+id/btn_go_analytics"/>

    <Button
        android:id="@+id/btn_go_analytics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_analytics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_result_desc"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
